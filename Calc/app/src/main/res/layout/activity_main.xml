<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:orientation="vertical"
        android:background="@color/screen"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="14dp"
        >


        <TextView
            android:id="@+id/operations"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="7dp"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text=''
            android:textColor="@color/black"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginStart="14dp"

            android:layout_marginEnd="14dp"
            android:layout_marginBottom="7dp"
            android:ellipsize="start"
            android:gravity="end"
            android:maxLines="1"

            android:singleLine="true"
            android:text=''
            android:textColor="@color/black"
            android:textSize="30pt" />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_goneMarginTop="200dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="151dp"
            android:orientation="horizontal"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            >

            <Button
                android:id="@+id/cleanScreen"
                style="@style/operators"
            android:text="C"/>
            <Button
                android:id="@+id/plus"
                style="@style/operators"
                android:text="+"/>
            <Button
                android:id="@+id/minus"
                style="@style/operators"
                android:text="-"/>
            <Button
                android:id="@+id/divided"
                style="@style/operators"
                android:text="/"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_goneMarginTop="200dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="151dp"
        android:orientation="horizontal"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        >

        <Button
            android:id="@+id/nine"
            style="@style/numbers"

            android:text="9"/>
        <Button
            android:id="@+id/eight"
            style="@style/numbers"
            android:text="8"/>
        <Button
            android:id="@+id/seven"
            style="@style/numbers"
            android:text="7"/>
        <Button
            android:id="@+id/times"
            style="@style/operators"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_goneMarginTop="200dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="151dp"
        android:orientation="horizontal"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        >

        <Button
            android:id="@+id/six"
            style="@style/numbers"
            android:text="6"/>
        <Button
            android:id="@+id/five"
            style="@style/numbers"
            android:text="5"/>
        <Button
            android:id="@+id/four"
            style="@style/numbers"
            android:text="4"/>
        <Button
            android:id="@+id/rest"
            style="@style/operators"
            android:text="%"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_goneMarginTop="200dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="151dp"
        android:orientation="horizontal"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        >

        <Button
            android:id="@+id/three"
            style="@style/numbers"
            android:text="3"/>
        <Button
            android:id="@+id/two"
            style="@style/numbers"
            android:text="2"/>
        <Button
            android:id="@+id/one"
            style="@style/numbers"
            android:text="1"/>
        <Button
            android:id="@+id/equals"
            style="@style/operators"

            android:text="="/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_goneMarginTop="200dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="151dp"
        android:orientation="horizontal"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:id="@+id/zero"
            style="@style/numbers"
            android:layout_weight="30"
            android:text="0" />

        <Button
            android:id="@+id/dot"
            style="@style/operators"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:text="." />


    </LinearLayout>


</LinearLayout>